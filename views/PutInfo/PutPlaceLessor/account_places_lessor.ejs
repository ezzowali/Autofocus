<link rel="stylesheet" href="css/item_User.css">





<div class="container rounded bg-white mt-5">
    <div class="row">
        <div class="col-md-4 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <span class="font-weight-bold"> <%=foo.firstNameA%>  <%=foo.lastNameA%> </span>
                <span class="text-black-50"><%=foo.email%> </span>
                <!-- <span>United States</span> -->
            
            </div>

            
        </div>

      
        
        
        

        <div class="col-md-8">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex flex-row align-items-center back"><i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                        <h6>Back to home</h6>
                    </div>
                    <h6 class="text-right">Edit Profile</h6>
                </div>

          

                    <form action="/account_places_lessor" method="POST">
                        <div class="row mt-2">
                            <div class="col-md-6"><input name="firstNameA" type="text" class="form-control" placeholder="first name" value="<%=foo.firstNameA%> "></div>
                            <div class="col-md-6"><input name="lastNameA" type="text" class="form-control" placeholder="last Name" value="<%=foo.lastNameA%> "></div>                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6"><input name="email" type="text" class="form-control" placeholder="Email" value="<%=foo.email%>"></div>
                            <div class="col-md-6"><input name="phone" type="text" class="form-control" value="0<%=foo.phone%>" placeholder="Phone number"></div>
                        </div>
                        <div class="mt-5 text-right">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                            <button class="btn btn-primary profile-button" type="submit">Save Profile</button>
                        </div>
                    </form>




              

                </div>
            </div>
        
        </div>
    </div>

