                  <div class="col-md-6 mb-3">
                    
                    <select name="place" id="sel1" onchange="giveSelection(this.value)" >
                      <option  value="">-- select one --</option>
                          <option value="حضورية"> حضورية  </option>    
                          <option value="عن بعد">عن بعد</option>
                 
                    </select>
                  </div>


                  <div class="col-lg-12 mb-3" style="padding-top: 1em;">
                    <label for="city">  <p>  المدينة التي ستقام فيها الدورة </p> </label>
                  <select name="city" id="sel2">
                    <option   data-option="حضورية"> </option>
